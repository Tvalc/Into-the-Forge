<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>FORGEBORN: SOLSTICE BREAK</title>
  <style>
    body { margin:0; }
    canvas { display:block; background:#18121a; }
  </style>
</head>
<body>
<canvas id="gameCanvas" width="800" height="600"></canvas>
<script>
const canvas = document.getElementById("gameCanvas");
const ctx = canvas.getContext("2d");
let gameState = "title";
let charIdx = 0;

function drawTitle() {
  ctx.fillStyle="#191723";
  ctx.fillRect(0,0,canvas.width,canvas.height);
  ctx.font="bold 46px Segoe UI";
  ctx.fillStyle="#ffb347";
  ctx.textAlign="center";
  ctx.fillText("FORGEBORN:",canvas.width/2,110);
  ctx.font="bold italic 36px Segoe UI";
  ctx.fillStyle="#fff";
  ctx.fillText("SOLSTICE BREAK",canvas.width/2,160);
  ctx.font="bold 26px Segoe UI";ctx.fillStyle="#f7e17c";
  ctx.fillText("High Score: 0",canvas.width/2,260);
  let blink=(Math.floor(Date.now()/500)%2)==0;
  if(blink){
      ctx.font="bold italic 28px Segoe UI";
      ctx.fillStyle="#fff";
      ctx.fillText("[ Press Any Button to Start ]",canvas.width/2,340);
  }
}

function drawCharSelect() {
  ctx.fillStyle="#262335";
  ctx.fillRect(0,0,canvas.width,canvas.height);
  ctx.font="bold 34px Segoe UI";
  ctx.fillStyle="#ffb347";
  ctx.textAlign="center";
  ctx.fillText("Choose Your Forgeborn",canvas.width/2,64);
  
  // Just display choices as text for now
  const chars = ["Korok","Oros","Cercee","Ironbeard","Ignir","Voss"];
  for(let i=0;i<chars.length;++i){
    ctx.font = (i===charIdx) ? "bold italic 30px Segoe UI" : "26px Segoe UI";
    ctx.fillStyle = (i===charIdx) ? "#fff" : "#999";
    ctx.fillText((i===charIdx?"> ":"") + chars[i] + (i===charIdx?" <":""),canvas.width/2,160+40*i);
  }
  
  ctx.font="20px Segoe UI";ctx.fillStyle="#f7e17c";
  ctx.fillText("[ Use UP/DOWN to choose, ENTER to select ]",canvas.width/2,480);
}

function drawLevelSelect() {
  ctx.fillStyle="#232e35";
  ctx.fillRect(0,0,canvas.width,canvas.height);
  ctx.font="bold 34px Segoe UI";
  ctx.fillStyle="#ffb347";
  ctx.textAlign="center";
  ctx.fillText("Select Level",canvas.width/2,64);

  const levels = ["Frozen Wastes","Rootrealms","Brightsteel City"];
  for(let i=0;i<levels.length;++i){
    ctx.font = (i===0) ? "bold italic 28px Segoe UI" : "24px Segoe UI";
    ctx.fillStyle = (i===0) ? "#fff" : "#999";
    ctx.fillText((i===0?"> ":"") + levels[i] + (i===0?" <":""),canvas.width/2,180+40*i);
  }

  ctx.font="20px Segoe UI";ctx.fillStyle="#f7e17c";
  ctx.fillText("[ Press ENTER to start ]",canvas.width/2,480);
}

function drawGameplay() {
  ctx.fillStyle="#123";
  ctx.fillRect(0,0,canvas.width,canvas.height);
  
  // Demo player
  ctx.fillStyle="#ffb347";
  ctx.beginPath();
  ctx.arc(canvas.width/2, canvas.height/2,32,0,Math.PI*2);
  ctx.fill();
  
  // HUD
  ctx.font="24px Segoe UI";
  ctx.fillStyle="#fff";
  ctx.textAlign="left";
  ctx.fillText("Score: "+0,24,40);
}

function loop() {
  ctx.clearRect(0,0,canvas.width,canvas.height);
  if(gameState==="title") drawTitle();
  else if(gameState==="charselect") drawCharSelect();
  else if(gameState==="levelselect") drawLevelSelect();
  else if(gameState==="playing") drawGameplay();
  
  requestAnimationFrame(loop);
}
loop();

window.addEventListener("keydown", function(e){
  if(gameState==="title") gameState="charselect";
  else if(gameState==="charselect") {
    if(e.key==="ArrowDown") charIdx=(charIdx+1)%6;
    if(e.key==="ArrowUp") charIdx=(charIdx+5)%6;
    if(e.key==="Enter") gameState="levelselect";
  }
  else if(gameState==="levelselect") {
    if(e.key==="Enter") gameState="playing";
    // Add up/down logic for level choice as needed.
  }
});
</script>
</body>
</html>